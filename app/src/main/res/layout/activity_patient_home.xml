<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:paddingVertical="32dp"
    tools:context=".UI.PatientHomeActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDoctor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cvBiologicalFunctions"
        android:layout_marginEnd="14dp"
        android:layout_width="0dp"

        app:cardCornerRadius="16dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingVertical="26dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/baseline_person_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor asigned:"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="DR. GILBERTO"
                android:textAllCaps="true"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDate"
        app:layout_constraintTop_toBottomOf="@+id/cvDoctor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cvBiologicalFunctions"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="16dp"
        android:layout_width="0dp"
        app:cardCornerRadius="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:text="05/09/2024 : 5:00 PM"
            android:textSize="12sp"
            android:textAllCaps="true"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvBiologicalFunctions"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cvDoctor"
        android:layout_width="0dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/teal_200"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:layout_gravity="center"
            android:layout_height="match_parent">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biological Functions"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rate Them:"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="16dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hunger"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginVertical="4dp"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            app:tint="@color/white"
                            android:layout_marginVertical="4dp"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="16dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sleep"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginVertical="4dp"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            app:tint="@color/white"
                            android:layout_marginVertical="4dp"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="16dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Energy"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginVertical="4dp"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            app:tint="@color/white"
                            android:layout_marginVertical="4dp"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="16dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hydration"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginVertical="4dp"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginVertical="4dp"
                            app:tint="@color/white"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="15dp"
                            app:tint="@color/white"
                            android:layout_marginVertical="4dp"
                            android:backgroundTint="@color/purple_500"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMoodStatement"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/cvBiologicalFunctions"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mood Statement"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How do you feel today?"
                android:padding="6dp"
                android:layout_marginStart="8dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_mood5"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/ic_mood4"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/ic_mood3"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/ic_mood2"/>
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="8dp"
                    android:src="@drawable/ic_mood1"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnDiagnosis"
        app:layout_constraintTop_toBottomOf="@+id/cvMoodStatement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Diagnosis"/>

    <Button
        android:id="@+id/btnPrescription"
        app:layout_constraintTop_toBottomOf="@+id/btnDiagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Medical Prescription"/>

    <Button
        android:id="@+id/btnAssignments"
        app:layout_constraintTop_toBottomOf="@+id/btnPrescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Assignments"/>

</androidx.constraintlayout.widget.ConstraintLayout>